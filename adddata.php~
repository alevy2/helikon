   <script>
   $(document).ready(function (){
       $("#type").change(function() { 
	   var v = $(this).val();
	   if (v == "person"){
	     $("#person").show();
	     $("#contribution").hide();
	     $("#media").hide();
	   }
	   else if (v == "media"){
	     $("#person").hide();
	     $("#contribution").hide();
	     $("#media").show();
	   }
	   else if (v == "contribution"){
	     $("#person").hide();
	     $("#contribution").show();
	     $("#media").hide();
	   }
	 });
       $("#type").change();
     });
</script>
